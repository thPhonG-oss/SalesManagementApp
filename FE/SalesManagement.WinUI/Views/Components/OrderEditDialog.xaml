<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="SalesManagement.WinUI.Views.Components.OrderEditDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SalesManagement.WinUI.ViewModels"
    mc:Ignorable="d"
    Title="{x:Bind ViewModel.DialogTitle, Mode=OneWay}"
    PrimaryButtonText="Lưu thay đổi"
    CloseButtonText="Đóng"
    DefaultButton="Primary">

    <ContentDialog.Resources>
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,24,0,12"/>
        </Style>
    </ContentDialog.Resources>

    <Grid Width="500">
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="700">
            <StackPanel Spacing="0">
                <InfoBar x:Name="ErrorBar" Severity="Error" IsOpen="False" Margin="0,0,0,12"/>

                <Grid RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Mã đơn hàng" Style="{StaticResource LabelTextStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.OrderId, Mode=OneWay}" Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <TextBlock Text="Ngày tạo" Style="{StaticResource LabelTextStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.DateDisplay, Mode=OneWay}" Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <TextBlock Text="Tổng tiền" Style="{StaticResource LabelTextStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.AmountDisplay, Mode=OneWay}" Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="Trạng thái" Style="{StaticResource LabelTextStyle}"/>
                        <Border Height="24" CornerRadius="12" HorizontalAlignment="Left"
                                Background="{x:Bind ViewModel.StatusColor, Mode=OneWay}" 
                                BorderBrush="{x:Bind ViewModel.StatusBorder, Mode=OneWay}" 
                                BorderThickness="1" Padding="12,0">
                            <TextBlock Text="{x:Bind ViewModel.Status, Mode=OneWay}" 
                                       FontSize="12" FontWeight="Medium"
                                       Foreground="{x:Bind ViewModel.StatusBorder, Mode=OneWay}" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Cập nhật Chi tiết mặt hàng" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Sản phẩm" FontWeight="Medium" FontSize="12"/>
                    <TextBlock Text="Số lượng" Grid.Column="1" FontWeight="Medium" FontSize="12"/>
                    <TextBlock Text="Thành tiền" Grid.Column="2" FontWeight="Medium" FontSize="12" HorizontalAlignment="Right"/>
                </Grid>

                <ItemsControl ItemsSource="{x:Bind ViewModel.OrderItems, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:DetailItemViewModel">
                            <Grid Padding="12,12" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Bind ProductName}" VerticalAlignment="Center"/>

                                <NumberBox Grid.Column="1" 
           Value="{x:Bind Quantity, Mode=TwoWay}" 
           SpinButtonPlacementMode="Inline"
           SmallChange="1" LargeChange="10" Minimum="1"
           Width="100" Height="32"
           VerticalAlignment="Center" HorizontalAlignment="Left"
           VerticalContentAlignment="Center"/>

                                <TextBlock Grid.Column="2" Text="{x:Bind TotalDisplay}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Medium"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


                <TextBlock Text="Cập nhật trạng thái" Style="{StaticResource SectionHeaderStyle}"/>

                <ComboBox SelectedItem="{x:Bind TempStatus, Mode=TwoWay}"
                          HorizontalAlignment="Stretch" Margin="0,0,0,12">
                    <x:String>Mới tạo</x:String>
                    <x:String>Đang xử lý</x:String>
                    <x:String>Đã thanh toán</x:String>
                    <x:String>Đã hủy</x:String>
                </ComboBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</ContentDialog>