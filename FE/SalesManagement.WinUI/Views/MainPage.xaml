<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SalesManagement.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SalesManagement.WinUI.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView x:Name="NavView"
                    PaneDisplayMode="Auto"
                    IsSettingsVisible="False"
                    AlwaysShowHeader="True"
                    MenuItemsSource="{x:Bind ViewModel.MainMenuItems}"
                    FooterMenuItemsSource="{x:Bind ViewModel.FooterMenuItems}"
                    SelectedItem="{x:Bind ViewModel.SelectedMenuItem, Mode=TwoWay}"
                    Loaded="NavView_Loaded"
                    IsBackButtonVisible="Collapsed"
                    OpenPaneLength="240">
        <NavigationView.PaneHeader>
            <StackPanel Orientation="Horizontal" Padding="10">

                <TextBlock Text="Sales Manager" 
                           VerticalAlignment="Center" 
                           Style="{ThemeResource SubtitleTextBlockStyle}" 
                           Margin="12,0,0,0"/>
            </StackPanel>
        </NavigationView.PaneHeader>

        <NavigationView.MenuItemTemplate>
            <DataTemplate x:DataType="models:AppMenuItem">
                <NavigationViewItem Content="{x:Bind Title}" Tag="{x:Bind}">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="{x:Bind Icon}" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </DataTemplate>
        </NavigationView.MenuItemTemplate>

        <Frame x:Name="ContentFrame" />

    </NavigationView>
</Page>