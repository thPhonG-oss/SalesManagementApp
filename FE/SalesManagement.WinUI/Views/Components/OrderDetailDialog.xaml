<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="SalesManagement.WinUI.Views.OrderDetailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SalesManagement.WinUI.ViewModels"
    mc:Ignorable="d"
    Title="Chi tiết đơn hàng"
    PrimaryButtonText="Đóng"
    DefaultButton="Primary">

    <ContentDialog.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
        </Style>
    </ContentDialog.Resources>

    <StackPanel Spacing="16" Padding="0,10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Mã đơn:" Style="{StaticResource LabelStyle}"/>
            <TextBlock Text="{x:Bind OrderVM.OrderId, Mode=OneWay}" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Ngày tạo:" Style="{StaticResource LabelStyle}"/>
            <TextBlock Text="{x:Bind OrderVM.DateDisplay, Mode=OneWay}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Số lượng:" Style="{StaticResource LabelStyle}"/>
            <TextBlock Text="{x:Bind OrderVM.ItemsCountDisplay, Mode=OneWay}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Tổng tiền:" Style="{StaticResource LabelStyle}"/>
            <TextBlock Text="{x:Bind OrderVM.AmountDisplay, Mode=OneWay}" 
                       Foreground="{ThemeResource SystemAccentColor}" FontWeight="Bold" FontSize="16"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Trạng thái:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
            <Border Background="{x:Bind OrderVM.StatusColor, Mode=OneWay}" 
                    BorderBrush="{x:Bind OrderVM.StatusBorder, Mode=OneWay}"
                    BorderThickness="1" CornerRadius="4" Padding="8,4">
                <TextBlock Text="{x:Bind OrderVM.Status, Mode=OneWay}" 
                           Foreground="{x:Bind OrderVM.StatusBorder, Mode=OneWay}" 
                           FontSize="12" FontWeight="SemiBold"/>
            </Border>
        </StackPanel>
    </StackPanel>
</ContentDialog>
