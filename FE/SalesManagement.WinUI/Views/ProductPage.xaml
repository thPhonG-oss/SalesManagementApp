                Margin="12,0"
                Height="36"
                />

            <Button
                Grid.Column="2"
                Content="â¬† Import"
                Height="36"/>
        </Grid>

        <!-- ===== CONTENT CARD ===== -->
        <Border
            Grid.Row="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="12"
            Padding="16"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ===== FILTER BAR ===== -->
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="12"
                    Margin="0,0,0,16">

                    <ComboBox
                        Width="160"
                        PlaceholderText="GiÃ¡ 0Ä‘ - 100k"/>

                    <ComboBox
