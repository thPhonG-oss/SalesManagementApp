<Page
    x:Class="SalesManagement.WinUI.Views.CustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SalesManagement.WinUI.ViewModels"
    xmlns:models="using:SalesManagement.WinUI.Models"
    xmlns:converters="using:SalesManagement.WinUI.Converters"
    mc:Ignorable="d"
    x:Name="PageRoot">

    <Page.Resources>
        <converters:BooleanConverters x:Key="BoolToVis"/>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Quản lý khách hàng" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>

            <AutoSuggestBox Grid.Column="1" 
                            Margin="20,0" 
                            MaxWidth="400"
                            PlaceholderText="Tìm kiếm khách hàng..."
                            Text="{x:Bind ViewModel.SearchText, Mode=TwoWay}"
                            QueryIcon="Find"
                            QuerySubmitted="OnQuerySubmitted">
            </AutoSuggestBox>

            <Button Grid.Column="2" 
                    Style="{StaticResource AccentButtonStyle}"
                    Command="{x:Bind ViewModel.AddCustomerCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Add"/>
                    <TextBlock Text="Thêm mới"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="1" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="0">
            <ListView ItemsSource="{x:Bind ViewModel.Customers, Mode=OneWay}"
                      SelectionMode="Single"
                      Padding="12">
                <ListView.Header>
                    <Grid Padding="12" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ID" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Họ tên" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="SĐT" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Email" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="4" Text="Địa chỉ" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="5" Text="Thao tác" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Customer">
                        <Grid Padding="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Bind CustomerId}" VerticalAlignment="Center" Opacity="0.6"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind FullName}" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind Phone}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="{x:Bind Email}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="{x:Bind Address}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                            <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <Button Padding="6" Background="Transparent" BorderThickness="0" 
                                        ToolTipService.ToolTip="Sửa"
                                        Command="{Binding ElementName=PageRoot, Path=ViewModel.EditCustomerCommand}"
                                        CommandParameter="{x:Bind}">
                                    <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                </Button>
                                <Button Padding="6" Background="Transparent" BorderThickness="0" Foreground="Red"
                                        ToolTipService.ToolTip="Xóa"
                                        Command="{Binding ElementName=PageRoot, Path=ViewModel.DeleteCustomerCommand}"
                                        CommandParameter="{x:Bind}">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                          Width="40" Height="40" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16" Margin="0,16,0,0">
            <Button Command="{x:Bind ViewModel.PrevPageCommand}" Content="Trước"/>
            <TextBlock VerticalAlignment="Center">
                <Run Text="Trang "/>
                <Run Text="{x:Bind ViewModel.Page, Mode=OneWay}"/>
                <Run Text=" / "/>
                <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}"/>
            </TextBlock>
            <Button Command="{x:Bind ViewModel.NextPageCommand}" Content="Sau"/>
        </StackPanel>
    </Grid>
</Page>