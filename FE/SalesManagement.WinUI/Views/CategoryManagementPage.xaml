<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SalesManagement.WinUI.Views.CategoryManagementPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32,24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0"
                    Width="44"
                    Height="44"
                    CornerRadius="22"
                    Padding="0"
                    VerticalAlignment="Center"
                    Click="BackButton_Click">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#0A000000"/>
                </Button.Resources>
                <FontIcon Glyph="&#xE72B;" FontSize="16"/>
            </Button>

            <!-- Title -->
            <StackPanel Grid.Column="1"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center">
                <TextBlock Text="Quản lý danh mục"
                           FontSize="32"
                           FontWeight="Bold"/>
                <TextBlock Text="Tổ chức và phân loại sản phẩm theo danh mục"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Add Button -->
            <Button Grid.Column="2"
                    Content="+ Thêm danh mục"
                    Height="44"
                    Padding="20,0"
                    CornerRadius="10"
                    FontWeight="SemiBold"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    Foreground="White"
                    Click="AddCategory_Click">
                <Button.Shadow>
                    <ThemeShadow />
                </Button.Shadow>
            </Button>
        </Grid>

        <!-- ===== CONTENT ===== -->
        <Border Grid.Row="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="12"
                Padding="20"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <Grid>
                <!-- Loading Indicator -->
                <ProgressRing IsActive="{Binding IsLoading}"
                              Width="60"
                              Height="60"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>

                <!-- Error Message -->
                <InfoBar IsOpen="{Binding HasError}"
                         Severity="Error"
                         Title="Lỗi"
                         Message="{Binding ErrorMessage}"
                         IsClosable="True"
                         VerticalAlignment="Top"
                         Margin="0,0,0,16"/>

                <!-- Category List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding ShowContent}">
                    <StackPanel Spacing="12">

                        <!-- Header Row -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                Padding="16,12"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*" MinWidth="200"/>
                                    <ColumnDefinition Width="2.5*" MinWidth="300"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="TÊN DANH MỤC"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                <TextBlock Grid.Column="1"
                                           Text="MÔ TÃ"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="12,0,0,0"/>

                                <TextBlock Grid.Column="2"
                                           Text="THAO TÁC"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Category Items -->
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="16"
                                            Margin="0,4"
                                            CornerRadius="10"
                                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1.5*" MinWidth="200"/>
                                                <ColumnDefinition Width="2.5*" MinWidth="300"/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Category Name -->
                                            <StackPanel Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        Spacing="4">
                                                <TextBlock Text="{Binding CategoryName}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"/>
                                                <Border Padding="6,2"
                                                        CornerRadius="4"
                                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                        HorizontalAlignment="Left"
                                                        Visibility="{Binding IsActive}">
                                                    <TextBlock Text="Hoạt động"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Description -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Description}"
                                                       TextWrapping="Wrap"
                                                       MaxLines="3"
                                                       FontSize="14"
                                                       Margin="16,0,16,0"
                                                       VerticalAlignment="Center"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       LineHeight="20"/>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="2"
                                                        Orientation="Horizontal"
                                                        Spacing="10"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">

                                                <!-- Edit Button -->
                                                <Button Padding="14,8"
                                                        Height="36"
                                                        CornerRadius="8"
                                                        FontWeight="SemiBold"
                                                        Click="EditCategory_Click">
                                                    <Button.Resources>
                                                        <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#0A000000"/>
                                                    </Button.Resources>
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                                        <TextBlock Text="Sửa"/>
                                                    </StackPanel>
                                                </Button>

                                                <!-- Delete Button -->
                                                <Button Padding="14,8"
                                                        Height="36"
                                                        CornerRadius="8"
                                                        FontWeight="SemiBold"
                                                        Background="#FFE74C3C"
                                                        Foreground="White"
                                                        Click="DeleteCategory_Click">
                                                    <Button.Resources>
                                                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FFC0392B"/>
                                                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FFA93226"/>
                                                    </Button.Resources>
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                                        <TextBlock Text="Xóa"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ===== ADD CATEGORY DIALOG ===== -->
        <ContentDialog x:Name="AddCategoryDialog"
                       Title="Thêm danh mục mới"
                       PrimaryButtonText="Lưu"
                       CloseButtonText="Hủy"
                       DefaultButton="Primary"
                       PrimaryButtonClick="AddCategoryDialog_PrimaryButtonClick"
                       XamlRoot="{x:Bind XamlRoot}"
                       Width="450">

            <StackPanel Spacing="16">
                <StackPanel Spacing="4">
                    <TextBlock Text="Tên danh mục"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="CategoryNameTextBox"
                             PlaceholderText="Nhập tên danh mục"
                             CornerRadius="8"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Mô tả"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="DescriptionTextBox"
                             PlaceholderText="Nhập mô tả chi tiết về danh mục"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="100"
                             CornerRadius="8"/>
                </StackPanel>

                <Border Padding="16,12"
                        CornerRadius="8"
                        Background="{ThemeResource LayerFillColorDefaultBrush}">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Spacing="12">
                        <FontIcon Glyph="&#xE734;"
                                  FontSize="18"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Trạng thái hoạt động:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <ToggleSwitch x:Name="IsActiveToggle"
                                      IsOn="True"
                                      OnContent="Bật"
                                      OffContent="Tắt"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ContentDialog>

        <!-- ===== EDIT CATEGORY DIALOG ===== -->
        <ContentDialog x:Name="EditCategoryDialog"
                       Title="Chỉnh sửa danh mục"
                       PrimaryButtonText="Lưu thay đổi"
                       CloseButtonText="Hủy"
                       DefaultButton="Primary"
                       PrimaryButtonClick="EditCategoryDialog_PrimaryButtonClick"
                       XamlRoot="{x:Bind XamlRoot}"
                       Width="450">

            <StackPanel Spacing="16">
                <StackPanel Spacing="4">
                    <TextBlock Text="Tên danh mục"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="EditCategoryNameTextBox"
                             CornerRadius="8"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Mô tả"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="EditDescriptionTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="100"
                             CornerRadius="8"/>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

    </Grid>
</Page>