                    <ComboBox
                        Width="160"
                        PlaceholderText="Sáº¯p xáº¿p theo"/>
                </StackPanel>

                <!-- ===== PRODUCT LIST ===== -->
                <ListView
                    Grid.Row="1"
                    ItemsSource="{Binding Products}"
                    SelectionMode="None">

                    <!-- Header -->
                    <ListView.Header>
                        <Border Background="{ThemeResource SubtleFillColorSecondaryBrush}" Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="áº¢nh" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="TÃªn sáº£n pháº©m" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="Thao tÃ¡c"
