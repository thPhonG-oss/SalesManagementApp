                                        <Button Content="âœŽ" Width="32" Height="32"/>
                                    </StackPanel>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Grid>
        </Border>

        <!-- ===== PAGINATION ===== -->
        <StackPanel
            Grid.Row="2"
