<Page
    x:Class="SalesManagement.WinUI.Views.DetailItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32,24"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Width="44"
                    Height="44"
                    CornerRadius="22"
                    Padding="0"
                    VerticalAlignment="Center"
                    Click="Back_Click">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#0A000000"/>
                </Button.Resources>
                <FontIcon Glyph="&#xE72B;" FontSize="16"/>
            </Button>

            <StackPanel Grid.Column="1"
                        Spacing="4"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center">
                <TextBlock Text="Chi tiết sản phẩm"
                           FontSize="28"
                           FontWeight="Bold"/>
                <TextBlock Text="Xem và chỉnh sửa thông tin sản phẩm"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </Grid>

        <!-- ===== CONTENT ===== -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12"
                    Padding="32"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    MaxWidth="1200"
                    HorizontalAlignment="Center">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>

                <Grid ColumnSpacing="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT COLUMN: IMAGE SLIDESHOW -->
                    <StackPanel Spacing="16">
                        <!-- Image Viewer -->
                        <Border CornerRadius="12"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                            <FlipView ItemsSource="{Binding DisplayImages}"
                                      Width="320"
                                      Height="420"
                                      CornerRadius="12">
                                <FlipView.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12"
                                                Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                            <Image Source="{Binding ImageUrl}"
                                                   Stretch="UniformToFill"/>
                                        </Border>
                                    </DataTemplate>
                                </FlipView.ItemTemplate>
                            </FlipView>
                        </Border>

                        <!-- Upload Button -->
                        <Button HorizontalAlignment="Stretch"
                                Height="44"
                                CornerRadius="10"
                                Click="UploadImage_Click">
                            <Button.Resources>
                                <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#0A000000"/>
                            </Button.Resources>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B9;" FontSize="16"/>
                                <TextBlock Text="Tải thêm ảnh" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- RIGHT COLUMN: PRODUCT INFO -->
                    <StackPanel Grid.Column="1" Spacing="24">

                        <!-- Product Name -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="{Binding ProductName}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Padding="10,5"
                                        CornerRadius="8"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}">
                                    <TextBlock Text="{Binding Category.CategoryName}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Author -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Tác giả"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE77B;"
                                          FontSize="16"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{Binding Author}"
                                           FontSize="16"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Price -->
                        <!-- Price -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Giá bán"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <!-- Special Price (giá gốc bị gạch) -->
                                <TextBlock Text="{Binding PriceText}"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                           TextDecorations="Strikethrough"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <!-- Current Price (giá sau giảm) -->
                                <TextBlock Text="{Binding SpecialPriceText}"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>

                                <!-- Discount Badge -->
                                <Border Background="#FF27AE60"
                                        Padding="10,6"
                                        CornerRadius="8"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="{Binding DiscountText}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Mô tả sản phẩm"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                            <Border Padding="16"
                                    CornerRadius="10"
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    BorderThickness="1"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                <TextBlock Text="{Binding Description}"
                                           TextWrapping="Wrap"
                                           LineHeight="24"
                                           FontSize="14"/>
                            </Border>
                        </StackPanel>

                        <!-- Stock Info -->
                        <Border Padding="16"
                                CornerRadius="10"
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xE7B8;"
                                          FontSize="18"
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                <TextBlock Text="Tồn kho:"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding StockText}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- ACTION BUTTONS -->
                        <StackPanel Orientation="Horizontal"
                                    Spacing="12"
                                    Margin="0,16,0,0">

                            <Button Content="Cập nhật sản phẩm"
                                    Width="180"
                                    Height="44"
                                    CornerRadius="10"
                                    FontWeight="SemiBold"
                                    Style="{ThemeResource AccentButtonStyle}"
                                    Click="Update_Click">
                                <Button.Shadow>
                                    <ThemeShadow />
                                </Button.Shadow>
                            </Button>

                            <Button Width="140"
                                    Height="44"
                                    CornerRadius="10"
                                    FontWeight="SemiBold"
                                    Background="#FFE74C3C"
                                    Foreground="White"
                                    Click="Delete_Click">
                                <Button.Resources>
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FFC0392B"/>
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FFA93226"/>
                                </Button.Resources>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                    <TextBlock Text="Xóa sản phẩm"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>

    </Grid>
</Page>