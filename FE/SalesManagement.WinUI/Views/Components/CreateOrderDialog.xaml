<ContentDialog
    x:Class="SalesManagement.WinUI.Views.Components.CreateOrderDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SalesManagement.WinUI.ViewModels"
    mc:Ignorable="d"
    x:Name="RootDialog"
    Title="Tạo đơn hàng"
    PrimaryButtonText="Tạo đơn hàng"
    CloseButtonText="Hủy"
    DefaultButton="Primary">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">1200</x:Double>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="NumberBox">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </ContentDialog.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="650">
            <Grid RowSpacing="16" Margin="0,0,0,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Sản phẩm" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    <TextBlock Grid.Column="1" Text="Đơn giá" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    <TextBlock Grid.Column="2" Text="Số lượng" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    <TextBlock Grid.Column="3" Text="Thành tiền" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                </Grid>

                <ItemsControl Grid.Row="1" ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:CreateOrderDetailViewModel">
                            <Grid Margin="0,0,0,12" ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0" 
                                          ItemsSource="{x:Bind AvailableProducts}"
                                          SelectedItem="{x:Bind SelectedProduct, Mode=TwoWay}"
                                          DisplayMemberPath="Name"
                                          HorizontalAlignment="Stretch"
                                          PlaceholderText="Chọn sản phẩm"/>

                                <TextBox Grid.Column="1" 
                                         Text="{x:Bind PriceDisplay, Mode=OneWay}"
                                         IsReadOnly="True" 
                                         Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>

                                <NumberBox Grid.Column="2" 
                                           Value="{x:Bind QuantityDouble, Mode=TwoWay}"
                                           SpinButtonPlacementMode="Compact"
                                           SmallChange="1" LargeChange="10" Minimum="1"
                                           HorizontalAlignment="Stretch"/>

                                <TextBox Grid.Column="3" 
                                         Text="{x:Bind TotalDisplay, Mode=OneWay}"
                                         IsReadOnly="True" 
                                         Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                         FontWeight="SemiBold"/>

                                <Button Grid.Column="4" 
                                        Command="{Binding ElementName=RootDialog, Path=ViewModel.RemoveRowCommand}"
                                        CommandParameter="{x:Bind}"
                                        Background="Transparent" BorderThickness="0" Padding="0"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        ToolTipService.ToolTip="Xóa dòng">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Grid.Row="2" HorizontalAlignment="Stretch" 
                        Background="Transparent" BorderThickness="1" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                        Command="{x:Bind ViewModel.AddRowCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8" Padding="4">
                        <FontIcon Glyph="&#xE710;" FontSize="12"/>
                        <TextBlock Text="Thêm mặt hàng"/>
                    </StackPanel>
                </Button>

                <Border Grid.Row="3" BorderThickness="1" CornerRadius="4" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                        Padding="16" Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Tổng thanh toán" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}" FontSize="16"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.TotalAmountDisplay, Mode=OneWay}" 
                                   FontSize="28" FontWeight="SemiBold" 
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</ContentDialog>