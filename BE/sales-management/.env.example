# ==============================================
# SALES MANAGEMENT - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Application
PORT=8080

# Database Configuration
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=sales_management_db
MYSQL_USER=sales_user
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_PORT=3307

# Database Connection (for backend)
DATABASE_URL=jdbc:mysql://mysql:3306/sales_management_db?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
DB_USERNAME=sales_user
DB_PASSWORD=your_mysql_password_here

# JWT Configuration
# Generate a strong secret key (minimum 64 characters recommended)
# You can generate one using: openssl rand -base64 64
SECRET_KEY=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS

# Cloudinary Configuration
# Sign up at https://cloudinary.com to get your credentials
CLOUD_NAME=your_cloud_name
CLOUD_API_KEY=your_api_key
CLOUD_API_SECRET=your_api_secret

# Spring Profile
SPRING_PROFILES_ACTIVE=docker