<ContentDialog
    x:Class="SalesManagement.WinUI.Views.Components.CreateOrderDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SalesManagement.WinUI.ViewModels"
    mc:Ignorable="d"
    x:Name="RootDialog"
    Title="Tạo đơn hàng mới"
    PrimaryButtonText="Thanh toán &amp; Tạo"
    CloseButtonText="Hủy bỏ"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">1300</x:Double>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="NumberBox">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </ContentDialog.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="600">
            <Grid RowSpacing="16" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Sản phẩm" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Đơn giá" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Số lượng" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Thành tiền" FontWeight="SemiBold"/>
                </Grid>

                <ItemsControl Grid.Row="1" ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:CreateOrderDetailViewModel">
                            <Grid Margin="0,0,0,12" ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                          ItemsSource="{x:Bind AvailableProducts}"
                                          SelectedItem="{x:Bind SelectedProduct, Mode=TwoWay}"
                                          DisplayMemberPath="ProductName"
                                          HorizontalAlignment="Stretch"
                                          PlaceholderText="Chọn sản phẩm..."/>

                                <TextBox Grid.Column="1"
                                         Text="{x:Bind PriceDisplay, Mode=OneWay}"
                                         IsReadOnly="True"
                                         Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>

                                <NumberBox Grid.Column="2"
                                           Value="{x:Bind QuantityDouble, Mode=TwoWay}"
                                           SpinButtonPlacementMode="Inline"
                                           SmallChange="1" Minimum="1"/>

                                <TextBox Grid.Column="3"
                                         Text="{x:Bind TotalDisplay, Mode=OneWay}"
                                         IsReadOnly="True"
                                         FontWeight="Bold"
                                         Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>

                                <Button Grid.Column="4"
                                        Command="{Binding ElementName=RootDialog, Path=ViewModel.RemoveRowCommand}"
                                        CommandParameter="{x:Bind}"
                                        Background="Transparent" BorderThickness="0">
                                    <FontIcon Glyph="&#xE74D;" Foreground="Red"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Grid.Row="2" HorizontalAlignment="Stretch"
                        Command="{x:Bind ViewModel.AddRowCommand}"
                        Background="Transparent" BorderThickness="1" BorderBrush="#DDDDDD">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="12"/>
                        <TextBlock Text="Thêm dòng sản phẩm"/>
                    </StackPanel>
                </Button>

                <Grid Grid.Row="3" Margin="0,24,0,0" ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="12">
                        <TextBox Header="Email khách hàng"
                                 PlaceholderText="Nhập email khách hàng (bắt buộc)"
                                 Text="{x:Bind ViewModel.CustomerEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBox Header="Địa chỉ nhận hàng"
                                 PlaceholderText="Nhập địa chỉ giao hàng (để trống nếu nhận tại quầy)"
                                 Text="{x:Bind ViewModel.ShipAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBox Header="Ghi chú đơn hàng"
                                 PlaceholderText="Ví dụ: Giao giờ hành chính..."
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="60"
                                 Text="{x:Bind ViewModel.Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <StackPanel Spacing="4">
                            <TextBlock Text="Khuyến mãi / Voucher" FontWeight="SemiBold" FontSize="14"/>

                            <ComboBox ItemsSource="{x:Bind ViewModel.Promotions, Mode=OneWay}"
                                      SelectedItem="{x:Bind ViewModel.SelectedPromotion, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"
                                      DisplayMemberPath="DisplayName"
                                      PlaceholderText="Chọn mã giảm giá"

                                      DropDownOpened="{x:Bind ViewModel.OpenPromotionList}" />

                            <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                    CornerRadius="4" Padding="12" Margin="0,4,0,0"
                                    Visibility="{x:Bind ViewModel.PromotionInfoVisibility, Mode=OneWay}">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{x:Bind ViewModel.SelectedPromotion.PromotionName, Mode=OneWay, FallbackValue=''}" FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedPromotion.Description, Mode=OneWay, FallbackValue=''}" FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                    </StackPanel>

                    <Border Grid.Column="1" Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                            BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            CornerRadius="8" Padding="16">
                        <Grid RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tạm tính:" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind ViewModel.SubTotalDisplay, Mode=OneWay}" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Giảm giá Voucher:" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind ViewModel.DiscountAmountDisplay, Mode=OneWay}" Foreground="Green" FontWeight="SemiBold"/>

                            <Rectangle Grid.Row="2" Grid.ColumnSpan="2" Height="1" Fill="#E5E5E5" Margin="0,4"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="TỔNG THANH TOÁN" VerticalAlignment="Bottom" FontWeight="Bold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{x:Bind ViewModel.TotalAmountDisplay, Mode=OneWay}"
                                       Foreground="{ThemeResource SystemAccentColor}" FontWeight="Bold" FontSize="20"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</ContentDialog>